<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2">
      <div class="well sidebar-nav">
        <ul class="nav nav-list">
          <li class="nav-header">Domain: <%= params[:domain] %></li>
          <li class="">
              <a class=""  data-toggle="ajaxmodal" title="" name="newalias" href="/add/record/<%= @domain_id %>"><i class="icon-plus"></i>
                Add record
              </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="span10">
    <!--Body content-->
      <table class="tablesorter table">
        <thead>
          <tr>
            <th style="width: 10%" >NAME</th>
            <th style="width: 10%">type</th>
            <th style="width: 20%">content</th>
            <th style="width: 10%">ttl</th>
            <th style="width: 10%">prio</th>
            <th style="width: 10%">pop</th>
            <th style="width: 10%">last update</th>
            <th style="width: 10%">Author</th>
            <th style="width: 10%" class="filter-false sorter-false"> Actions</th>      
          </tr>
        </thead>
        <tbody>
          <% @records.each do |record| %>
          <tr>
            <td><%= record[:name]%></td>
            <td><%= record[:type]%></td>
            <td><%= record[:content]%></td>
            <td><%= record[:ttl]%></td>
            <td><%= record[:prio]%></td>
            <td><%= record[:pop]%></td>
            <td><%= record[:last_update]%></td>
            <td><%= record[:update_by]%></td>
  
              <td><a href="/delete/record/<%= @domain_id %>/<%= record[:id] %>"><i class="icon-trash"></i></a></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>