<div class="container">
	<div class="row-fluid">
	<div class="span6 form-signin">
				<form class="form-horizontal well" METHOD="POST" action="/login">
					<fieldset>
						<legend>Login Form</legend>
						<div class="control-group">
							<div class="control-label">
								<label>Username</label>
							</div>
							<div class="controls">
								<input name='login' type="text" placeholder="<%= @login_msg %>" class="input-large">
							</div>
						</div>

						<div class="control-group">
							<div class="control-label">
								<label>Password</label>
							</div>
							<div class="controls">
								<input name='password' type="password" placeholder="password" class="input-large">
							</div>
						</div>

						<div class="control-group">
							<div class="controls">

							<button type="submit" id="submit" class="btn btn-primary button-loading" data-loading-text="Loading...">Sign in</button>

							</div>
						</div>
					</fieldset>
				</form>
			</div>
	</div>
</div>

